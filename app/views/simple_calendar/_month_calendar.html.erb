<div id="calendar">

  <div id="header" class="header">
    <%= link_to calendar.url_for_previous_view do %>
      <div id="left" class="left"></div>
    <% end %>
    <h1>
      <span class="calendar-title"><%= t('date.month_names')[start_date.month] %> <%= start_date.year %></span>
    </h1>
    <%= link_to calendar.url_for_next_view do %>
      <div id="right" class="right"></div>
    <% end %>
  </div>

  <div class="month new">
    <% date_range.each_slice(7) do |week| %>
      <div class="week">
        <% week.each do |day| %>
          <%= content_tag :div, class: calendar.td_classes_for(day) do %>
            <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(passed_block) %>
              <div class="day-name"><%= t('date.abbr_day_names')[day.wday] %></div>
              <div class="day-number"><% capture_haml(day.day, sorted_events.fetch(day, []), &passed_block) %></div>
            <% else %>
              <div class="day-name"><%= t('date.abbr_day_names')[day.wday] %></div>
              <div class="day-number"><% passed_block.call day.day, sorted_events.fetch(day, []) %></div>
            <% end %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
