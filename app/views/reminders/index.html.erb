<h1>Listing reminders</h1>
<div id="calendar">
  <%= render partial: "calendar", locals: {reminders: @reminders} %>
</div>
<div id="reminders_calendar">
  
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start time</th>
      <th>End time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reminders.each do |reminder| %>
      <tr>
        <td><%= reminder.description %></td>
        <td><%= reminder.start_time %></td>
        <td><%= reminder.end_time %></td>
      </tr>
    <% end %>
  </tbody>
</table>

